// [Visual Studio Code Guide[Simple Chinese][简体中文]](https://github.com/i5ting/vsc)
// Place your settings in this file to overwrite the default settings
// 
// JsDoc support in JavaScript
// https://github.com/Microsoft/TypeScript/wiki/JsDoc-support-in-JavaScript
// @type {string | boolean}
// @param arg1 {string}
// @param arg1 {string=} An optional parameter
// @return {string}
//
// Copy text with formatting - Copy code examples with full syntax highlighting.
{
    // "editor.fontFamily": "Consolas",
    // "editor.fontSize": 14,
    "editor.rulers": [80],
    "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 100,
    "editor.selectionHighlight": true,
    // "editor.renderIndentGuides": true,
    "editor.renderLineHighlight": "all",
    // "editor.minimap.enabled": true,
    // "editor.minimap.renderCharacters": true,
    "editor.dragAndDrop": false,
    "editor.autoIndent": false,
    "editor.cursorSmoothCaretAnimation": true,

    "breadcrumbs.enabled": true,

    "workbench.colorTheme": "Visual Studio Dark",
    "workbench.iconTheme": "vs-seti",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.closeOnFileDelete": false,
    "workbench.editor.highlightModifiedTabs": false,

    // "window.titleBarStyle": "custom",
    "window.title": "${dirty}${activeEditorLong}${separator}${rootName}${separator}${appName}",

    "git.enabled": true,
    "git.path": "E:/Program Files/Git/bin/git.exe",

    "css.lint.duplicateProperties": "warning",
    "css.lint.idSelector": "warning",
    "css.lint.important": "warning",
    "css.lint.universalSelector": "warning",
    "css.lint.zeroUnits": "warning",

    "less.lint.duplicateProperties": "warning",
    "less.lint.idSelector": "warning",
    "less.lint.important": "warning",
    "less.lint.universalSelector": "warning",
    "less.lint.zeroUnits": "warning",

    "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
    // Type checking for JavaScript files
    // 可以在这里统一控制, 或者在单个文件中使用这些注释
    // @ts-check // @ts-nocheck // @ts-ignore
    "javascript.implicitProjectConfig.checkJs": false,
    "javascript.suggest.completeFunctionCalls": true,

    "emmet.preferences": {
        "bem.elementSeparator": "__",
        "bem.modifierSeparator": "--"
    },

    "files.associations": {
        "*.wxp": "vue",
        "*.wxss": "less",
        "*.wxa": "vue",
        "*.wxc": "vue"
    },

    // Extension
    // - Better Comments
    // - Bookmarks
    // - Code Spell Checker
    // - cssrem
    // - Project Manager
    // - SonarLint
    // - Todo Tree
    // - Vetur
    // - GitLens
    // - markdownlint
    // - HTML CSS Class Completion
    // - Add jsdoc comments
    // 插件安装的位置: C:\Users\{用户}\.vscode\extensions
    // 插件配置
    "cssrem.rootFontSize": 75,
    "vetur.format.defaultFormatter.html": "js-beautify-html",
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    },
    "sonarlint.ls.javaHome": "E:/Program Files/Java/jre",
    "sonarlint.connectedMode.servers": [{
        "serverId": "",
        "serverUrl": "",
        // "organizationKey": "",
        "token": ""
    }],
    "sonarlint.connectedMode.project": {
        "serverId": "",
        "projectKey": ""
    },
    "todo-tree.defaultHighlight": {
        "foreground": "green",
        "type": "none"
    },
    "todo-tree.customHighlight": {
        "TODO": {},
        "FIXME": {}
    }
}
