// [Visual Studio Code Guide[Simple Chinese][简体中文]](https://github.com/i5ting/vsc)
// Place your settings in this file to overwrite the default settings
// 
// JsDoc support in JavaScript
// https://github.com/Microsoft/TypeScript/wiki/JsDoc-support-in-JavaScript
// @type {string | boolean}
// @param arg1 {string}
// @param arg1 {string=} An optional parameter
// @return {string}
//
// Copy text with formatting - Copy code examples with full syntax highlighting.
{
    // "editor.fontFamily": "Consolas",
    "editor.fontSize": 14,
    "editor.rulers": [80],
    "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 100,
    "editor.selectionHighlight": false,
    "editor.renderIndentGuides": true,
    "editor.renderLineHighlight": "all",
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": true,
    "editor.dragAndDrop": false,

    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,

    "window.title": "${dirty}${activeEditorLong}${separator}${rootName}${separator}${appName}",

    "git.enabled": true,
    
    "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
    "workbench.colorTheme": "Visual Studio Dark",
    "workbench.iconTheme": "vs-seti"
    // Extension
    // * HTML CSS Class Completion
    // * Add jsdoc comments
    // 插件安装的位置: C:\Users\Administrator\.vscode\extensions
    // 插件配置
}